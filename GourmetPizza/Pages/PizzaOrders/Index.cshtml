@page
@model GourmetPizza.Pages.PizzaOrders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pizza Order</h1>

<h4>Enter your order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PizzaOrder.PizzaID" class="control-label"></label>
                <select asp-for="PizzaOrder.PizzaID" class="form-control" asp-items="Model.PizzaNames">
                </select>
                <span asp-validation-for="PizzaOrder.PizzaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.PizzaCount" class="control-label"></label>
                <input asp-for="PizzaOrder.PizzaCount" class="form-control" />
                <span asp-validation-for="PizzaOrder.PizzaCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.CreditCardNumber" class="control-label"></label>
                <input asp-for="PizzaOrder.CreditCardNumber" class="form-control" />
                <span asp-validation-for="PizzaOrder.CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (ViewData["TotalPrice"] != null)
{
    <h4>
        You Purchased @Model.PizzaOrder.PizzaCount @ViewData["PizzaName"]
    </h4>
    <img src="~/images/@(ViewData["PizzaName"]).jpg" />
    <h4>
        Total Price: @(ViewData["TotalPrice"] + " has been charged to " +  Model.PizzaOrder.CreditCardNumber)
    </h4>
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
