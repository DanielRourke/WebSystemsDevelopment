@page
@model GourmetPizza.Pages.PizzaOrders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pizza Order</h1>

<h4>Enter your order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PizzaOrder.PizzaFK" class="control-label"></label>
                <select asp-for="PizzaOrder.PizzaFK" class="form-control" asp-items="Model.PizzaNames">
                </select>
                <span asp-validation-for="PizzaOrder.PizzaFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.PizzaCount" class="control-label"></label>
                <input asp-for="PizzaOrder.PizzaCount" class="form-control" />
                <span asp-validation-for="PizzaOrder.PizzaCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.CreditCardNumber" class="control-label"></label>
                <input asp-for="PizzaOrder.CreditCardNumber" class="form-control" />
                <span asp-validation-for="PizzaOrder.CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
