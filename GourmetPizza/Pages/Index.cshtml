@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    /* Make the image occupy the full width, and be responsive (scale automatically) */
    img {
        width: 100%;
        height: auto;
    }
</style>


<h1>Index</h1>


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/BBQ Beef.jpg" alt="BBQ Beef">
            <div class="carousel-caption">
                <h3>
                    BBQ Beef
                </h3>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/Chicken and Pineapple.jpg" alt="Chicken and Pineapple">
            <div class="carousel-caption">
                <h3>
                    Chicken and Pineapple
                </h3>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/Pepperoni Feast.jpg" alt="Pepperoni Feast">
            <div class="carousel-caption">
                <h3>
                    Pepperone Feast
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Vegetarian.jpg" alt="Vegetarian">
            <div class="carousel-caption">
                <h3>
                    Vegetarian
                </h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-8" >Welcome to the Gourmet  Pizza  shop</div>
    <div class="col-md-4" >
        <ul>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Pizzas/Index">Pizza Index</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
            </li>
        </ul>
    </div>
</div>